{
  "name": "file-uploader",
  "version": "1.0.0",
  "description": "Facilitates file uploads.",
  "scripts": {
    "clean": "rimraf dist",
    "copy-files": "./node_modules/copyfiles/copyfiles --verbose --error --up 1 src/**/*.js src/**/*.css src/**/*.html src/**/*.ico src/**/*.jpg src/**/*.png dist/ && cp -r node_modules dist/",
    "precompile": "tslint -c tslint.json -p tsconfig.json --fix",
    "compile": "tsc",
    "build": "npm run compile",
    "postbuild": "npm run copy-files",
    "dev": "./node_modules/tsc-watch/index.js --project . --outDir ./dist --onSuccess \"nodemon\"",
    "start": "npm run postbuild && node dist/index.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "nodemonConfig": {
    "watch": [
      "./src",
      "./node_modules"
    ],
    "ext": "ts,js,html,css,ico",
    "delay": 2500
  },
  "keywords": [
    "file"
  ],
  "author": "Paul Gundarapu",
  "license": "ISC",
  "dependencies": {
    "@types/express": "^4.17.13",
    "@types/formidable": "^1.2.5",
    "@types/serve-favicon": "^2.5.3",
    "@types/uuid": "^8.3.4",
    "bulma": "^0.8.2",
    "cross-env": "^7.0.3",
    "express": "^4.17.1",
    "formidable": "^1.2.6",
    "jquery": "^3.5.1",
    "jquery-blockui": "^2.7.0",
    "lodash.throttle": "^4.1.1",
    "moment": "^2.29.4",
    "pretty-bytes": "^5.3.0",
    "rimraf": "^3.0.2",
    "serve-favicon": "^2.5.0",
    "socket.io": "^4.5.1",
    "typescript": "^4.8.2",
    "uuid": "^8.3.2",
    "yargs": "^17.5.1"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.184",
    "@types/yargs": "^17.0.12",
    "concurrently": "^7.3.0",
    "copyfiles": "^2.4.1",
    "nodemon": "^2.0.19",
    "tsc-watch": "^5.0.3",
    "tslint": "^6.1.3"
  }
}
